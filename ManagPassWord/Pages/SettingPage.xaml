<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManagPassWord.Pages.SettingPage"
             BackgroundColor="{DynamicResource Surface}"
             xmlns:local="clr-namespace:ManagPassWord.Views"
             xmlns:converters="clr-namespace:ManagPassWord.Converters"
             Title="Settings">
    <ContentPage.Resources>
        <converters:ConverterBoolToVisible x:Key="vis" />
    </ContentPage.Resources>
    <Grid>
        <local:DebtSettingView IsVisible="{Binding IsDebtSettingVisible, Converter={x:StaticResource vis}}">
        </local:DebtSettingView>
        <local:PasswordSettingView IsVisible="{Binding IsPassWordSettingVisible, Converter={x:StaticResource vis}}"
                                    />
    </Grid>
</ContentPage>