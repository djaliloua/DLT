<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PurchaseManagement.MainPage"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:vm="clr-namespace:PurchaseManagement.MVVM.ViewModels"
             xmlns:models="clr-namespace:PurchaseManagement.MVVM.Models"
             xmlns:views="clr-namespace:PurchaseManagement.MVVM.Views"
             xmlns:service="clr-namespace:PurchaseManagement.ServiceLocator"
             x:Name="main"
             IsEnabled="{Binding IsSavebtnEnabled}"
             BackgroundColor="LightBlue"
             BindingContext="{x:Static service:ViewModelLocator.MainViewModel}"
             >
    <ContentPage.Triggers>
        <DataTrigger TargetType="ContentPage"
                     Binding="{Binding Source={x:Reference main}, Path=IsEnabled}"
                     Value="true">
            <Setter Property="BackgroundColor"
                    Value="{StaticResource Surface}" />

        </DataTrigger>
    </ContentPage.Triggers>
    <Grid RowSpacing="20"
          
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <HorizontalStackLayout Spacing="120"
                               HorizontalOptions="Center">
            <material:DatePickerField Date="{Binding SelectedDate}"
                                      VerticalOptions="End"
                                      Title="Date" />

            <Button HorizontalOptions="Center"
                    VerticalOptions="End"
                    Margin="0,5,0,0"
                    Command="{Binding AddCommand}"
                    Grid.Row="2">
                <Button.ImageSource>
                    <FontImageSource FontFamily="MaterialRegular"
                                     Glyph="{x:Static m:MaterialRound.Add}" />
                </Button.ImageSource>
            </Button>
        </HorizontalStackLayout>
        <ActivityIndicator IsRunning="{Binding Show}"
                           Color="Blue"
                           Grid.Row="1"
                           IsVisible="{Binding Show}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           HeightRequest="80"
                           WidthRequest="80"
                           x:Name="activity"
                           ZIndex="10" />
        <ListView ItemsSource="{Binding Items}"
                  RowHeight="150"
                  Grid.Row="2"
                  VerticalScrollBarVisibility="Never"
                  SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <Frame CornerRadius="10"
                                   BackgroundColor="{StaticResource Surface}">
                                <VerticalStackLayout Spacing="10">
                                    <VerticalStackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="2"
                                                              BindingContext="{Binding Source={x:Reference main}, Path=BindingContext}"
                                                              Command="{Binding DoubleClickCommand}" />
                                    </VerticalStackLayout.GestureRecognizers>

                                    <HorizontalStackLayout Spacing="10">
                                        <Image>
                                            <Image.Source>
                                                <FontImageSource FontFamily="MaterialRegular"
                                                                 Color="Black"
                                                                 Glyph="{x:Static m:MaterialRound.Date_range}" />
                                            </Image.Source>
                                        </Image>
                                        <Label Text="{Binding Purchase_Date}"
                                               VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="10">
                                        <Image>
                                            <Image.Source>
                                                <FontImageSource FontFamily="MaterialRegular"
                                                                 Color="Black"
                                                                 Glyph="{x:Static m:MaterialRound.Countertops}" />
                                            </Image.Source>
                                        </Image>
                                        <Label Text="{Binding PurchaseStatistics.PurchaseCount}"
                                               VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="10">
                                        <Image>
                                            <Image.Source>
                                                <FontImageSource FontFamily="MaterialRegular"
                                                                 Color="Black"
                                                                 Glyph="{x:Static m:MaterialRound.Attach_money}" />
                                            </Image.Source>
                                        </Image>
                                        <Label Text="{Binding PurchaseStatistics.TotalPrice, StringFormat='{0:C2}'}"
                                               VerticalOptions="Center" />

                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>

</ContentPage>
