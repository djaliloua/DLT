<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PurchaseManagement.Pages.PurchaseItemsPage"
             xmlns:vm="clr-namespace:PurchaseManagement.MVVM.ViewModels"
             xmlns:models="clr-namespace:PurchaseManagement.MVVM.Models"
             xmlns:service="clr-namespace:PurchaseManagement.Services"
             BindingContext="{x:Static service:RegisterViewModels.PurchaseItemsViewModel}"
             Title="Purchase Items">
    <VerticalStackLayout Margin="20">
        <ListView SelectedItem="{Binding Selected_Purchase_Item}"
                  ItemsSource="{Binding Purchase_Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <Label Text="{Binding Item_Name}" />
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>