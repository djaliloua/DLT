    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <HorizontalStackLayout Spacing="25">
                    <Border StrokeShape="Ellipse"
                            WidthRequest="{x:OnPlatform Android=70, Default=100}"
                            HeightRequest="{Binding Source={RelativeSource Self}, Path=WidthRequest}"
                            VerticalOptions="Start"
                            Style="{StaticResource bder}"
                            HorizontalOptions="Start">
                        <Label Text="{Binding Item_Name[0]}"
                               x:Name="txt"
                               TextColor="White"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                    </Border>
                    <VerticalStackLayout Spacing="1"
                                         VerticalOptions="{x:OnPlatform Android=Start, Default=Center}"
                                         Margin="0,0,0,0">
                        <Label Text="{Binding Purchase.PurchaseDate}"
                               VerticalOptions="Start"
                               Margin="0,0,0,0"
                               HorizontalOptions="Start" />
                        <Label Text="{Binding Item_Name}"
                               VerticalOptions="Start" />
                        <Label Text="{Binding Item_Price, StringFormat='{0:C2}'}"
                               VerticalOptions="Start" />
                    </VerticalStackLayout>
                </HorizontalStackLayout >
                <Label Text="{Binding Item_Description}"
                       Grid.Row="1"
                       Padding="10,0,0,0" />
            </Grid>
            <VerticalStackLayout Grid.Column="1">
                <Switch VerticalOptions="Start"
                        IsToggled="{Binding IsPurchased}"
                        ToolTipProperties.Text="IsPurchased" />
                <!--<Switch VerticalOptions="Start"
                        IsToggled="{Binding IsLocation}"
                        ToolTipProperties.Text="Location" />-->

                <Ellipse ToolTipProperties.Text="Location"
                         WidthRequest="30"
                         HeightRequest="30"
                         HorizontalOptions="Start">
                    <Ellipse.Triggers>
                        <DataTrigger TargetType="Ellipse" Binding="{Binding IsLocation}" Value="true">
                            <Setter Property="Fill"
                                    Value="Green" />
                        </DataTrigger>
                        <DataTrigger TargetType="Ellipse" Binding="{Binding IsLocation}"
                                     Value="false">
                            <Setter Property="Fill"
                                    Value="OrangeRed" />
                        </DataTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentView>
